#!/bin/bash

windows=$(dfzf-exec -t get_tree | jq -r '
  .. | objects
  | select(.type == "workspace" and .name == "__temp_group__") as $ws
  | $ws
  | recurse(.nodes[]?, .floating_nodes[]?)
  | select(.type == "con" and (.window_properties.title != null or .app_id != null))
  | .id
')

workspace=$(dfzf-exec -t get_workspaces --raw| jq -r '.[].name' |grep -v __temp_group__|head -n1)

for id in $windows; do
  dfzf-exec "[con_id=$id]" move container to workspace $workspace
done

dfzf-windows-load | head -n1 | sed -Ez 's/.*#([0-9]+).*/\1/'| xargs -I @ dfzf-exec '[con_id=@]' focus
