#!/usr/bin/env bash
export SHELL="$(command -v bash)"
dfzf-kill-bro >/dev/null
[ -f "$HOME/.config/dfzf/dfzf.conf" ] && source "$HOME/.config/dfzf/dfzf.conf"

tools_top_cmd="${tools_top_cmd:-gotop}"
tools_calendar_cmd="${tools_calendar_cmd:-khal interactive}"
tools_clock_cmd="${tools_clock_cmd:-tty-clock -c -C 4 -s}"
tools_wifi_cmd="${tools_wifi_cmd:-nmtui connect}"
tools_bluetooth_cmd="${tools_bluetooth_cmd:-bluetuith --no-warning}"
tools_fetch_cmd="${tools_fetch_cmd:-fastfetch && sleep infinity}"

# Check the first argument and run the corresponding command
case "$1" in
clock)
	eval "$tools_clock_cmd"
	;;
top)
	eval "$tools_top_cmd"
	;;
calendar)
	eval "$tools_calendar_cmd"
	;;
wifi)
	eval "$tools_wifi_cmd"
	;;
bluetooth)
	eval "$tools_bluetooth_cmd"
	;;
fetch)
	eval "$tools_fetch_cmd"
	;;
*)
	echo "Usage: $0 {clock|top|calendar|wifi|bluetooth|fetch}"
	exit 1
	;;
esac
